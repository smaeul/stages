unshare -m
backtick -n dir { dirname ${0} }
importas -u dir dir
cd ${dir}
if {
  if -t { test -x ${dir}/scripts/isolate }
  ${dir}/scripts/isolate
}
s6-envdir environment
export MOUNTNS 1
${dir}/scripts/controller $@
