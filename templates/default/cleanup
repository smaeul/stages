die() {
  printf 'error: %s\n' "$*" >&2
  exit 1
}

info() {
  printf '      %s\n' "$*" >&2
}

warn() {
  printf 'warning: %s\n' "$*" >&2
}

root=${1:-}
[ -n "$root" ] || die "no root directory given"

info "removing portage cache/config..."
rm -fr --one-file-system "${root}/etc/portage"/*
rm -fr --one-file-system "${root}/var/cache/edb"/*
